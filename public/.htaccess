# REMEMBER TO UPDATE CHANGES AT ../.htaccess AS WELL.

DirectoryIndex index.php

RewriteEngine On
RewriteRule ^archive/?$ archive.php [L]
RewriteRule ^about/?$ about.php [L]
RewriteRule ^pick/?$ pick.php [L]
RewriteRule ^pick/([^\/]+)/?$ pick.php?archive=$1 [L]
RewriteRule ^pick/([^\/]+)/([0-9]+)/?$ pick.php?archive=$1&lotsize=$2 [L]

php_flag display_startup_errors on
php_flag display_errors on
php_flag log_errors on
php_value error_log "/dev/stderr"
