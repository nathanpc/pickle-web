# REMEMBER TO UPDATE CHANGES AT public/.htaccess AS WELL.

DirectoryIndex index.php

RewriteEngine On
RewriteRule ^$ public/index.php [L]
RewriteRule ^archive/?$ public/archive.php [L]
RewriteRule ^about/?$ public/about.php [L]
RewriteRule ^upload/?$ public/upload.php [L]
RewriteRule ^pick/?$ public/pick.php [L]
RewriteRule ^pick/([^\/]+)/?$ public/pick.php?archive=$1 [L]
RewriteRule ^pick/([^\/]+)/([0-9]+)/?$ public/pick.php?archive=$1&lotsize=$2 [L]
RewriteRule ^pick/local/([^\/]+)/?$ public/pick.php?local=$1 [L]
RewriteRule ^((?!public/).*)$ public/$1 [L,NC]

php_flag display_startup_errors on
php_flag display_errors on
php_flag log_errors on
php_value error_log "/dev/stderr"
