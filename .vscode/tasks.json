{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "docker build",
			"type": "shell",
			"command": "docker",
			"args": [
				"build",
				"-t",
				"${workspaceFolderBasename}-dev",
				"${workspaceFolder}"
			],
			"group": {
				"kind": "build"
			},
			"presentation": {
				"reveal": "always"
			}
		},
		{
			"label": "docker run",
			"type": "shell",
			"command": "docker",
			"args": [
				"run",
				"-it",
				"--rm",
				"-p",
				"8080:80",
				"${workspaceFolderBasename}-dev"
			],
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"presentation": {
				"reveal": "always"
			},
			"dependsOn": [
				"docker build"
			]
		}
	]
}